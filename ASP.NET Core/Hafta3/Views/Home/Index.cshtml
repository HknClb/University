<!--HTML dökümanı
    C# Komutları "et" işareti ile kullanılır.
    Birden fazla C# komutu kullanmak için "et" işaretinden sonra {komutlar} şeklinde yazılır.
    -->
<!DOCTYPE html>
<html lang="tr">
<head>
    <title>İ.T.P.G. Hafta#3</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
</head>
<body>
    @DateTime.Now.AddDays(9).ToString();<br />
    @DateTime.Now.ToString();<br />
    @DateTime.Now.ToShortDateString();<br />
    <p>Bilgisayar Mühendisliği 3.Sınıf 5.Yarıyıl Güz Dönemi İnternet Tabanlı Program Geliştirme.</p><br />
    @{
        var numberOne = 8;
        var numberTwo = 7;
        var total = numberOne + numberTwo;
    }

    @total;

    @{
        var day = DateTime.Now.Day;
    }

    @if (day == 21)
    {
        <p>Evet Şuan Ayın 21'i</p>
    }

    @{
        var list = new List<String>() { "Hakan", "Abdullah", "Emre", "Yavuz", "Batuş", "Voxen", "Mert", "Yusuf"};
    }

    @{
        var rand = new Random();
        var random = rand.Next(0, list.Count);
    }

    <ol>
        Random Sellector

        @for (int i = 0; i < list.Count; i++)
        {
            @if (random == i)
            {
                <li>@list[i] => Selected!</li>
            }
            else
            {
                <li>@list[i]</li>
            }

        }
    </ol>

    @{
        int counter = 0;
    }

    <table style="text-align: center;">
        @while (counter < list.Count)
        {
            <tr>
                @for (int i = 0; i < 2; i++)
                {
                    @if (counter == random)
                    {
                        <td style="background-color: red; border: dashed; border-width: 2px; border-color: black; color: white; width: 200px;">@list[counter++]</td>
                    }
                    else
                    {
                        <td style="border: dashed; border-width: 2px; width: 200px;">@list[counter++]</td>
                    }
                }
            </tr>
        }
    </table>
    <h1><a style="color: red; font-size: 14pt; font-family: 'Times New Roman'; text-decoration: none;" href="/Home/GetStudents" role="button">
    Click this link if you want to see students!
</a></h1>
</body>
</html>